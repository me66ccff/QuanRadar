        <TextBox x:Name="UserID" HorizontalAlignment="Left" Height="29" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="623" Grid.IsSharedSizeScope="True" Grid.Column="1" Grid.ColumnSpan="2"/>
